.github/workflows/unzip.yml
name: Unzip Flutter Project

on:
  push:
    branches:
      - main

jobs:
  unzip:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Install unzip
        run: sudo apt-get install unzip -y

      - name: Remove old extracted folder if exists
        run: rm -rf flutter_project_clean

      - name: Unzip project
        run: unzip flutter_project_clean.zip -d .

      - name: Remove zip file after extraction
        run: rm flutter_project_clean.zip

      - name: Commit extracted project
        run: |
          git config --local user.email "actions@github.com"
          git config --local user.name "GitHub Actions"
          git add .
          git commit -m "Auto-unzip Flutter project" || echo "No changes to commit"

      - name: Push changes
        run: |
          git push origin main
